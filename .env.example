# Example Environment Configuration
# Copy this file to .env.local and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/alloymind

# Database name
MONGODB_DB=alloymind

# =============================================================================
# AUTHENTICATION (CLERK)
# =============================================================================

# Clerk public key (safe to expose in client-side code)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# Clerk secret key (keep this secret!)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk webhook secret for secure webhook handling
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# API secret key for internal service communication
API_SECRET_KEY=your_secure_api_secret_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL (used for redirects and links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# SECURITY
# =============================================================================

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# JWT secret for token signing
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOBILE_ALERTS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_MONITORING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable API request logging
ENABLE_API_LOGGING=true
